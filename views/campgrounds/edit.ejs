<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center;">Create new Campground</h1>
    <div style="width: 30%; margin: 30px auto">
      <form  action="/campground/<%= campground._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <input type="text" class="form-control" name="camp[name]" value="<%= campground.name %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="camp[image]" value="<%= campground.image %>">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="camp[description]" value="<%= campground.description %>">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/campground">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
