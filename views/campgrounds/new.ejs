<% include ../partials/header %>
<div class="container">
  <div class="row">
    <h1 style="text-align:center;">Create new Campground</h1>
    <div style="width: 30%; margin: 30px auto">
      <form  action="/campground" method="post">
        <div class="form-group">
            <input type="text" class="form-control" name="name" placeholder="Name of th campground">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="image" placeholder="Enter image url">
        </div>
        <div class="form-group">
            <input type="text" class="form-control" name="description" placeholder="description">
        </div>
        <div class="form-group">
            <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/campground">Go back</a>
    </div>
  </div>
</div>

<% include ../partials/footer %>
